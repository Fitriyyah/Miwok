<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".ProfilSaya">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:background="#2B2B2C"
        android:layout_height="wrap_content">
        <Button
            android:layout_width="70dp"
            android:layout_height="35dp"
            android:id="@+id/btn_back"
            android:textSize="10sp"
            android:text="Back"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="310dp"
        android:layout_gravity="center"
        android:layout_height="wrap_content"
        android:background="#DFDFDF"
        android:orientation="vertical">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/profil" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="Fitriyyah Shalihati"
            android:textColor="#000000"
            android:textSize="25sp"
            android:textStyle="bold"
            android:layout_marginBottom="15dp"
            android:fontFamily="serif-monospace" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:background="#ffffff"
                android:layout_marginTop="5dp">

                <ImageView
                    android:id="@+id/click_email"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:onClick="email"
                    android:src="@drawable/email" />
                <ImageView
                    android:id="@+id/click_call"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:onClick="cellphone"
                    android:layout_marginLeft="25dp"
                    android:layout_gravity="center"
                    android:src="@drawable/call"/>
                <ImageView
                    android:id="@+id/click_pictures"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="25dp"
                    android:layout_gravity="center"
                    android:src="@drawable/picture"/>
                <ImageView
                    android:id="@+id/click_instagram"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="25dp"
                    android:layout_gravity="center"
                    android:src="@drawable/instagram"/>
            </LinearLayout>


        <TextView
            android:layout_marginLeft="20sp"
            android:layout_marginTop="20sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="BIOGRAFI"
            android:textColor="#000000"
            android:textSize="20sp"
            android:background="#BABABA"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:orientation="vertical"
            android:background="#BABABA"
            android:layout_gravity="center">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="30dp"
                    android:textColor="#000000"
                    android:text="Tentang Saya" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#000000"
                    android:layout_marginLeft="37sp"
                    android:text="Nama saya Fitriyyah Shalihati. Saya lahir di Muara Enim, pada tanggal . . . . ." />
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="62dp"
                    android:textColor="#000000"
                    android:text="Keluarga Saya" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#000000"
                    android:text="Ketika berumur 6 tahun, saya memulai pendidikan di SDN 11 . . . ." />
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="30dp"
                    android:textColor="#000000"
                    android:text="Riwayat Pendidikan" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#000000"
                    android:text="Saya adalah anak kedua dari empat bersaudara . . . ." />

            </LinearLayout>
            <Button
                android:id="@+id/buka_biografi"
                android:layout_width="60dp"
                android:layout_height="40dp"
                android:text="More"
                android:textSize="10dp"
                android:layout_gravity="right"/>
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="#BABABA"
            android:orientation="vertical">

            <ImageView
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:layout_width="250dp"
                android:layout_height="200dp"
                android:src="@drawable/galeri"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="see more photos"
                android:textColor="#000000"
                android:layout_marginTop="10dp"
                android:layout_gravity="center"
                android:textSize="15sp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="10dp"
                android:id="@+id/buka_galeri"/>
        </LinearLayout>
    </LinearLayout>
    </LinearLayout>

</ScrollView>