<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/wallpaper"
    tools:context=".MyProfile">

    <Button
        android:id="@+id/btn_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Back"
        android:textStyle="italic" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_gravity="center"
        android:text="My Profile"
        android:textColor="#FF007F"
        android:fontFamily="sans-serif-condensed"
        android:textSize="35sp"/>

    <ImageView
        android:layout_width="300dp"
        android:layout_height="200dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="20dp"
        android:layout_gravity="center"
        android:src="@drawable/satu"/>

    <TextView
        android:id="@+id/nama"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:layout_marginLeft="35dp"
        android:layout_alignParentLeft="true"
        android:text="Name : Dita Indah Sari"
        android:fontFamily="cursive"
        android:textColor="#800000"
        android:textSize="15dp"/>

    <TextView
        android:id="@+id/jenis_kelamin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:layout_marginLeft="35dp"
        android:layout_alignParentLeft="true"
        android:text="Gender : Female"
        android:fontFamily="cursive"
        android:textColor="#800000"
        android:textSize="15dp"/>

    <TextView
        android:id="@+id/tanggal_lahir"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:layout_marginLeft="35dp"
        android:layout_alignParentLeft="true"
        android:text="Address : Jl. Politeknik, Komplek Griya Mitra 2 Tahap 1"
        android:fontFamily="cursive"
        android:textColor="#800000"
        android:textSize="15dp"/>

    <TextView
        android:id="@+id/agama"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:layout_marginLeft="35dp"
        android:layout_alignParentLeft="true"
        android:text="Religion : Islam"
        android:fontFamily="cursive"
        android:textColor="#800000"
        android:textSize="15dp"/>

    <TextView
        android:id="@+id/hobi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:layout_marginLeft="35dp"
        android:layout_alignParentLeft="true"
        android:text="Hobbies : Travelling"
        android:fontFamily="cursive"
        android:textColor="#800000"
        android:textSize="15dp"/>

    <TextView
        android:id="@+id/alamat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="35dp"
        android:layout_marginBottom="15dp"
        android:text="Date Of Bird : 06 July 1999"
        android:fontFamily="cursive"
        android:textColor="#800000"
        android:textSize="15dp"/>

    <TextView
        android:id="@+id/no_hp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:layout_marginLeft="35dp"
        android:layout_alignParentLeft="true"
        android:text="Handphone Number : 082282865846"
        android:fontFamily="cursive"
        android:textColor="#800000"
        android:textSize="15dp"/>

</LinearLayout>